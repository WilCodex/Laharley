<div class="loader" data-loaded>
  <span class="loader__line"></span>
</div>
<style>
  .loader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    box-shadow:
      inset 55vw 0 0 0 var(--bg-secondary),
      inset -55vw 0 0 0 var(--bg-secondary);
    display: grid;
    place-items: center;
  }
  .loader.loaded {
    transition: 0.3s ease 0.5s;
    pointer-events: none;
    box-shadow:
      inset 0 0 0 0 var(--bg-secondary),
      inset 0 0 0 0 var(--bg-secondary);
  }
  .loader__line {
    width: 1px;
    height: 100%;
    background: var(--bg-primary);
    transition: 1s ease;
    animation: loading 1s linear forwards;
  }
  @keyframes loading {
    from {
      transform: scaleY(0);
    }
    to {
      transform: scaleY(0.3);
    }
  }
  .loader.loaded .loader__line {
    animation: loaded 0.5s ease forwards;
  }
  @keyframes loaded {
    from {
      transform: scaleY(0.3);
    }
    to {
      transform: scaleY(1);
      opacity: 0;
    }
  }
</style>
<script>
  const BODY = document.body;
  const LOADER = document.querySelector("[data-loaded]");
  window.addEventListener("DOMContentLoaded", () => {
    LOADER.classList.add("loaded");
    BODY.classList.add("loaded");
  });
</script>
